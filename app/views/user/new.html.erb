<%= form_for(@user) do |f| %>

     <% flash.each do |key,value|  %>
       <div class="<%= key %>" > <%= value %> </div>
     <% end %>

     <%= f.label :email %>
     <%= f.email_field :email %>

     <%= f.label :password %>
     <%= f.password_field :password %>

     <%= f.label :password_confirmation, "Confirmation" %>
     <%= f.password_field :password_confirmation %>

     <%= f.submit "Signup" %>
   <% end %>

   